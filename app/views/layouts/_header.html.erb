<header>
  <h1 class = "logo">
    <%= link_to root_path, class: "logo-link" do %>
      ジャケガイ
    <% end %>
  </h1>
  <nav>
    <% if end_user_signed_in? %>
      <ul class = "nav-list">
        <li class = "nav-item">
          <%= link_to user_path(@user), class: "nav-link" do %>
            マイページ<i class="far fa-meh-rolling-eyes"></i>
          <% end %>
        </li>
        <li class = "nav-item">
          <%= link_to destroy_end_user_session_path(@user), method: :delete, class: "nav-link", data: { confirm: "You sure?"} do %>
            ログアウト<i class="fas fa-sign-in-alt"></i>
          <% end %>
        </li>
        <li class = "nav-item">
          <%= link_to new_user_inquiry_path, class: "nav-link" do %>
            お問い合わせ<i class="fas fa-question-circle"></i>
          <% end %>
        </li>
        <li class = "nav-item">
          <%= link_to user_carts_edit_path, class: "nav-link" do %>
            <i class="fas fa-shopping-cart"></i>
          <% end %>
        </li>
      </ul>
    <% else %>
      <ul class = "nav-list">
        <li class = "nav-item">
          <%= link_to new_end_user_registration_path, class: "nav-link" do %>
            新規登録<i class="fas fa-user-plus"></i>
          <% end %>
        </li>
        <li class = "nav-item">
          <%= link_to new_end_user_session_path, class: "nav-link" do %>
            ログイン<i class="fas fa-sign-in-alt"></i>
          <% end %>
        </li>
    <% end %>
  </nav>
</header>

<div class = "form-group search-area">
  <input class = "form-control search-form" type = "search" placeholder = "曲名・歌手名で検索">
  <input type="submit" name="btn_search" value="検索" class = "btn btn-primary">
</div>


<div class = "border-line"></div>