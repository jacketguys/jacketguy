<% if end_user_signed_in? %>
    <% if product.favorited_by?(current_end_user) %>
        	<%= link_to  user_favorites_destroy_path(product.id), method: :delete, remote: true do  %>
        	<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
        	<% end %>

    <% else %>
        	<%=link_to  user_favorites_create_path(product.id), method: :post, remote: true do %>
        	<i  class="fas fa-poo" aria-hidden="true"></i>
        	<% end %>
    <% end %>
    <%= product.favorites.count %>
<% end %>

