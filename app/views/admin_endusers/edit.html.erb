<h2>登録会員情報の編集</h2>

<%= form_for(@user, url: admins_users_update_path) do |f| %>

    <h4>名前</h4>
     <%= f.text_field :first_name %>

    <%= f.text_field :last_name %>

    <h4>カナ</h4>
    <%= f.text_field :first_kana_name %>

    <%= f.text_field :last_kana_name %>

    <h4>郵便番号</h4>
    <%= f.text_field :post_code %>

    <h4>住所</h4>
    <%= f.text_field :address, :size=>"80" %>

    <h4>電話番号</h4>
    <%= f.text_field :phone_number %>

    <h4>メールアドレス</h4>
    <%= f.text_field :email, :size=>"80" %></br>


    <%= f.submit '変更を適用する。' %></br>
    <%= link_to "この会員を削除する", admins_users_destroy_path(@user.id), method: :delete, data: {confirm: '本当にこの会員を削除しますか？'} %>

  <% end %>