<div class="col-lg-8">

<div style="text-align:center">

<% if flash[:notice] %>
    <div class="flash">
        <%= flash[:notice] %>
    </div>
<% end %>

<h2>お問い合わせ内容入力</h2>
	<%= form_for(@inquiry, url: user_inquiries_path) do |f| %>
		<%= f.label :"カテゴリ" %><br>
  			<%= f.select :subject, [["発送について", "発送について"], ["交換・返品について", "交換・返品について"], ["商品について", "商品について"], ["身に覚えのない請求書", "身に覚えのない請求書"], ["その他", "その他"]] 	,class:"form-control" %>

    	<h4>お問い合わせ内容</h4>
    	<%= f.text_area :content, :size=>"100x15" %>
    	<%= f.submit '入力内容を送信' %>

	<% end %>
</div>
</div>


