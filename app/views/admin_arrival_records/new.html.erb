<div>
  <h1 style = "border: 1px solid black">入荷商品入力フォーム</h1>

  <div style = "border: 1px solid black">
    <h3>商品ID:<%= @product.id %></h3>
    <h3>商品タイトル:<%= @product.title %></h3>
  </div>

  <div>
    <%= form_with(model: @admin_arrival, url: admins_arrival_records_create_path, local: true) do |f| %>

      <%= f.hidden_field :product_id, :value => @product.id %>

      <div class = "form-group">
        <%= f.label :arrival_product %>
        <%= f.number_field :arrival_product, class: "form-control" %>
      </div>

      <div class = "form-group">
        <%= f.label :arrival_product_at %>
        <%= f.datetime_field :arrival_product_at, class: "form-control" %>
      </div>

      <%= f.submit "登録する", class: "btn btn-primary" %>

    <% end %>

  </div>

</div>