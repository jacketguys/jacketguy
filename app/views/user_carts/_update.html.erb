<!-- f.selectで非同期に変更を適応する方法 reference: https://medium.com/@ryanflach/automatically-submitting-a-rails-form-54b9f917a69c -->
<%= form_for(cart, url: user_carts_update_path(cart), method: :patch,remote: true) do |f| %>
<%= f.select :order_quantity, [cart.order_quantity,"1","2","3","4","5"],{},{selected:cart.order_quantity,onchange: "submit(this.form)"} %>
<% end %>

