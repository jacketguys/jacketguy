<h2>送り先の追加</h2>
<%= form_for(@user_addresses) do |f| %>

  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name ,autocomplete: "last_name" %>
  </div>

  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name ,autocomplete: "first_name" %>
  </div>

  <div class="field">
    <%= f.label :last_kana_name %><br />
    <%= f.text_field :last_kana_name ,autocomplete: "last_kana_name" %>
  </div>

  <div class="field">
    <%= f.label :first_kana_name %><br />
    <%= f.text_field :first_kana_name ,autocomplete: "first_kana_name" %>
  </div>

  <div class="field">
    <%= f.label :post_code %><br />
    <%= f.text_field :post_code ,autocomplete: "post_code" %>
  </div>

  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address ,autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :phone_number %><br />
    <%= f.text_field :phone_number ,autocomplete: "phone_number" %>
  </div>

	<div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>