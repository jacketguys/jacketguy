<h1>User show</h1>

	<div class="col-xs-3 user-box">
	<h3 class = "user-title">ユーザ情報</h3>
	<h5 class = "user-information-title">ユーザ名</h5>
	<p><%= @user.last_name %>&emsp;<%= @user.first_name %></p><br>
	<h5 class = "user-information-title">EMAIL</h5>
	<p><%= @user.email %></p><br>
	<h5 class = "user-information-title">住所</h5>
	<p><%= @user.address %></p><br>
	<h5 class = "user-information-title">電話番号</h5>
	<p><%=@user.phone_number %></p><br>
	<p><%= link_to "編集する", users_edit_path(@user), class: "btn btn-primary" %></p>
	</div>

<div class="col-xs-9 content-box">
<ul class="nav nav-tabs">
	<li class="active"><a href="#sampleContentA" data-toggle="tab">お届け先住所一覧</a></li>
	<li><a href="#sampleContentB" data-toggle="tab">お気に入り一覧</a></li>
	<li><a href="#sampleContentC" data-toggle="tab">購入履歴</a></li>
</ul>
  <div class="tab-content">
	<div class="tab-pane" id="sampleContentA">
			    <div style="text-align:center">
					<table class="table">

						  <tbody>
						  	<% @addresses.each do |address| %>
						    <tr>
						    <td><%= address.id %></td>
						     <td><%= address.address %> </td>
						     <td class="option">&ensp;<%= link_to '住所を削除',user_address_destroy_path(address.id), class: "btn-sm btn-danger", method: :delete %></td>

						    </tr>
						    <br>
						    <% end %>
						  </tbody>
					</table>
				 </div>
	</div>
	<div class="tab-pane active" id="sampleContentB">
		<div style="text-align:center">
				<table class="table">
					  <thead>
					    <tr>
					      <th scope="col">Title</th>
					      <th scope="col">Artist</th>
					      <th scope="col">price</th>
					    </tr>
					  </thead>

					  <tbody>
						  	<% @favorites.each do |favorite| %>
						    <tr>
						    <td><%= favorite.product.title %></td>
						    <td><%= favorite.product.artist.name %></td>
						    <td><%= favorite.product.price %></td>
						    </tr>
						    <% end %>
					  </tbody>
				</table>
		</div>
	</div>
	<div class="tab-pane" id="sampleContentC">
		<div style="text-align:center">

					<tbody>
					<% @order_histories.each do |order_history| %>
						    <tr>
						    <td><%= order_history.created_at %>&ensp;<%= order_history.address %>にお届けします</td>s

								<% order_history.product_histories.each do |product_history| %>
									<tr>
										<td><%= product_history.product.title %></td>
										<td><%= product_history.order_quantity %></td>
								  	<td><%= product_history.product.price * product_history.order_quantity %></td>
							    </tr>
								<% end %>
						    </tr>
				　　 <% end %>
		    		</tbody>

				<h1>CD title 枚数　etc</h1>
				<table class="table">
					<tbody>
						 <tr>
					      <td>購入者</td>
					      <td>拓三</td>
					    </tr>
					    <tr>
					      <td>受取人</td>
					      <td>拓三</td>
					    </tr>
					    <tr>
					      <td>発送先住所</td>
					      <td>拓三</td>
					    </tr>
					    <tr>
					      <td>発送先郵便番号</td>
					      <td>拓三</td>
					    </tr>
					    <tr>
					      <td>購入者</td>
					      <td>拓三</td>
					    </tr>
					    <tr>
					      <td>受取人</td>
					      <td>拓三</td>
					    </tr>
					</tbody>
				</table>
		</div>
	</div>
  </div>
</div>
