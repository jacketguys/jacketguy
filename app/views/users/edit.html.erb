<h2>ユーザ情報の編集</h2>

<%= form_for(@user, url: user_update_path) do |f| %>
<%= render 'layouts/error_messages', model: f.object %>
    <h4>名前</h4>
     <%= f.text_field :last_name %>

    <%= f.text_field :first_name %>

    <h4>カナ</h4>
    <%= f.text_field :last_kana_name %>

    <%= f.text_field :first_kana_name %>

    <h4>郵便番号</h4>
    <%= f.text_field :post_code %>

    <h4>住所</h4>
    <%= f.text_field :address, :size=>"80" %>

    <h4>電話番号</h4>
    <%= f.text_field :phone_number %>

    <h4>メールアドレス</h4>
    <%= f.text_field :email, :size=>"80" %></br>

    <div class="actions">
    <%= f.submit '変更を適用する。',class: "btn btn-info btn-lg" %></br>
</div>
<div class="actions">
    <%= link_to "退会はこちら", user_close_path(@user) ,class: "btn btn-danger btn-lg"%>
</div>
  <% end %>


