<div class="kakikukeko">

<h2>ジャケガイへの第一歩</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "xxx@xxx" , class:"devise_form" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以内で入力してね！)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"devise_form" %>
  </div>

  <div class="field">
    <%= f.label :パスワード再入力 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"devise_form" %>
  </div>

  <div class="field">
    <%= f.label :姓 %><br />
    <%= f.text_field :last_name ,autocomplete: "last_name" , class:"devise_form"%>
  </div>

  <div class="field">
    <%= f.label :名 %><br />
    <%= f.text_field :first_name ,autocomplete: "first_name" , class:"devise_form"%>
  </div>

  <div class="field">
    <%= f.label :姓カナ %><br />
    <%= f.text_field :last_kana_name ,autocomplete: "last_kana_name" , class:"devise_form"%>
  </div>

  <div class="field">
    <%= f.label :名カナ %><br />
    <%= f.text_field :first_kana_name ,autocomplete: "first_kana_name" , class:"devise_form"%>
  </div>

  <div class="field">
    <%= f.label :郵便番号 %><br />
    <%= f.text_field :post_code ,autocomplete: "post_code", class:"devise_form" %>
  </div>

  <div class="field">
    <%= f.label :住所 %><br />
    <%= f.text_field :address ,autocomplete: "address", class:"devise_form" %>
  </div>

  <div class="field devise_form">
    <%= f.label :電話番号 %><br />
    <%= f.text_field :phone_number ,autocomplete: "phone_number" , class:"devise_form"%>
  </div>
    <%= f.submit "新規登録" , class: "sinki btn btn-primary  btn-lg" %>

<%= render "users/shared/links" %>

<% end %>

</div>